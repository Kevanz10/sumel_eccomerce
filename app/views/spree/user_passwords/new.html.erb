<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>

<div class="main">
  <div class="container">
    <div class="row">
      <div class="text-center">
        <div class="page-header text-center">
          <h1>¿Olvido su contraseña?</h1>
          <p>Ingresa tu correo en el formulario.</p>
        </div><!-- End .page-header -->

        <%= form_for Spree::User.new, :as => :spree_user, :html => {:class => 'signin-form'}, :url => spree.reset_password_path do |f| %>
          <div class="form-group">
            <p>
              <%= f.label :email, Spree.t(:email) %>
              <%= f.email_field :email, :class => "form-control" %>
            </p>
          </div>
      
          <p>
            <%= f.submit Spree.t(:reset_password), :class => 'btn btn-accent min-width' %>
          </p>
        <% end %>
      </div><!-- End .col-md-9 -->
    </div>
  </div>
</div>
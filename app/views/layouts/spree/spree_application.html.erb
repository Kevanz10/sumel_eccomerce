<!doctype html>
<!--[if lt IE 7 ]> <html class="ie ie6" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie ie7" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie ie8" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie ie9" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if gt IE 9]><!-->
<html lang="<%= I18n.locale %>"><!--<![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  'spree/home/header-tablet'%>
  <head data-hook="inside_head">
    <%= render partial: 'spree/shared/head' %>
    <script src="https://use.fontawesome.com/e4b26ed800.js"></script>
    <style>
      body{
        line-height: 1.2;
      }
      /*NAVBAR STYLES FOR TABLETS*/
      @media (max-width: 1000px) {
        .navbar-header {
            float: none;
        }
        .navbar-left,.navbar-right {
            float: none !important;
        }
        .navbar-toggle {
            display: block;
        }
        .navbar-collapse {
            border-top: 1px solid transparent;
            box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
        }
        .navbar-fixed-top {
            top: 0;
            border-width: 0 0 1px;
        }
        .navbar-collapse.collapse {
            display: none!important;
        }
        .navbar-nav {
            float: none!important;
            margin-top: 7.5px;
        }
        .navbar-nav>li {
            float: none;
        }
        .mobile-toggle{
          background: white !important;
          margin-top: 23px !important;
        }

        .mobile-toggle span{
          background: grey ;
        }

        .navbar-content{
          background: white;
        }

        .navbar-content li a{
          color: white;
          text-align: center;
        }
        .navbar-nav>li>a {
            padding-top: 10px;
            padding-bottom: 10px;
        }
        .collapse.in{
            display:block !important;
        }

        .center{
          text-align: center;
        }

        .single-footer-widget {
          float: none;
          margin-top: 40px;
        }
      }
      @media (max-width: 764px) {
        .infoText {
          padding-left: 10px;
          padding-right: 10px;
        }
      }
      .flash-messages-all .alert{
        border: 1px solid white;
        color: #3c763d;
        text-align: center;
        margin-bottom: 0;
        width: 50%;
        margin: 0 auto;
        position: absolute;
        transform: translateX(-50%);
        left: 50%;
        background: #1253a7;
        color: white;
        top: 20%;
      }
    </style>
  </head>

  <body class="<%= body_class %>" id="<%= @body_id || 'default' %>" data-hook="body">
    <%= render partial: 'spree/shared/google_analytics.js' %>
    <%= render partial: 'spree/shared/header' %>
    <div class="flash-messages-all">
      <%= flash_messages%>
    </div>
    <%= yield %>
    <nav class="subscription-bar">
      <div class="row">
        <div class="col-md-6 text-left">
          <div class="">
            <h3 class="nav navbar-nav navbar-left left">Inscr√≠bete</h3>
            <%= form_tag("/subs", method: "post", class: 'sub-form') do %>
              <%= text_field_tag "subscription[email]", "", placeholder: 'Email', class: 'input-sub form-control', type: 'email', required: true%>
              <%= submit_tag("ENVIAR", class: "enviar-sub")%>
            <% end %>
          </div>
        </div>
        <div class="col-md-6 text-right">
           <div>
            <!--  <p class="navbar-text navbar-left">Open hours: 8.00-18.00 Mon-Sat</p> -->
            <div class="nav navbar-nav navbar-right right">
              <div class="navbar-text navbar-left mr-1">
                <i class="fa fa-facebook" aria-hidden="true"></i>
              </div>
              <div class="navbar-text navbar-left mr-1">
                <i class="fa fa-twitter" aria-hidden="true"></i>
              </div>
              <div class="navbar-text navbar-left">
                <i class="fa fa-instagram" aria-hidden="true"></i>
              </div>
            </div> 
          </div>
        </div>
      </div>
    </nav>
    <script type="text/javascript">
      $(document).on('turbolinks:load', function() {
        setTimeout(function () {
          $(".flash-messages-all").fadeOut('slow')
        }, 5000);
      });
    </script>
  </body>
</html>
